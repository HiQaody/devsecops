pipeline {
    agent any

    environment {
        IMAGE_NAME = 'gateway-dev'
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        CONTAINER_NAME = 'gateway-dev-container'
        TIMEOUT_MS = '30000'
        PROXY_TIMEOUT_MS = '30000'
        CORS_ORIGIN = 'https://gateway.tsirylab.com,https://diamadio.tsirylab.com,https://diamadio-admin.tsirylab.com,https://anjaranaka.tsirylab.com,https://mobilite-urbaine.tsirylab.com,https://criv.tsirylab.com,https://criv-admin.tsirylab.com,http://localhost:3000,http://localhost:3003,http://localhost:5173,http://localhost:4002,http://localhost:4001,http://localhost:4000,http://localhost:3005'
        PORT = '5010'
    }

    stages {

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building the Docker image with environment variables...'
                    sh """
                    docker build \
                        --build-arg TIMEOUT_MS=${TIMEOUT_MS} \
                        --build-arg PROXY_TIMEOUT_MS=${PROXY_TIMEOUT_MS} \
                        --build-arg CORS_ORIGIN=${CORS_ORIGIN} \
                        --build-arg PORT=${PORT} \
                        -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    """
                }
            }
        }


        stage('Deploy Containers') {
            steps {
                script {
                    echo 'Checking if the container is already running...'
                    sh """
                    if [ "\$(docker ps -q -f name=${CONTAINER_NAME})" ]; then
                        echo "Stopping and removing existing container..."
                        docker stop ${CONTAINER_NAME}
                        docker rm ${CONTAINER_NAME}
                    fi
                    """

                    echo 'Running the Docker container with environment variables...'
                    sh """
                    docker run -d --name ${CONTAINER_NAME} \
                        -e TIMEOUT_MS=${TIMEOUT_MS} \
                        -e PROXY_TIMEOUT_MS=${PROXY_TIMEOUT_MS} \
                        -e CORS_ORIGIN=${CORS_ORIGIN} \
                        -e PORT=${PORT} \
                        -p ${PORT}:${PORT} \
                        ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }
    }

    post {
        always {
            script {
                echo 'Cleaning workspace...'
                cleanWs()
            }
        }
    }
}