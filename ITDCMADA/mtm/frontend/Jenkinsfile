pipeline {
    agent any

    environment {
        CONTAINER_NAME   = 'mtm-front'
        IMAGE_NAME       = 'mtm-front'
        IMAGE_TAG        = "${BUILD_NUMBER}"
        NEXT_PORT        = '3147'
        NEXT_PUBLIC_APP_URL = 'https://mtm.itdcmada.mg'
        NEXT_PUBLIC_APP_NAME = 'MTM Website'
        NEXT_PUBLIC_APP_DESCRIPTION = 'Promouvoir un dÃ©veloppement durable et une technologie adaptÃ©e Ã  toutes les couches sociales de Madagascar'
        NEXT_PUBLIC_API_URL = 'https://mtm-api.itdcmada.mg'
        NEXT_PUBLIC_API_BASE_URL = 'https://mtm-api.itdcmada.mg/v1'
        NEXT_PUBLIC_ACCESS_TOKEN_EXPIRE_MINUTES = '60'
        
    }

    stages {
        stage('Build & Push') {
            steps {
                sh '''
                    docker build \
                      --build-arg NEXT_PUBLIC_APP_URL=${NEXT_PUBLIC_APP_URL} \
                      --build-arg NEXT_PUBLIC_APP_NAME=${NEXT_PUBLIC_APP_NAME} \
                      --build-arg NEXT_PUBLIC_APP_DESCRIPTION=${NEXT_PUBLIC_APP_DESCRIPTION} \
                      --build-arg NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL} \
                      --build-arg NEXT_PUBLIC_API_BASE_URL=${NEXT_PUBLIC_API_BASE_URL} \
                      --build-arg NEXT_PUBLIC_ACCESS_TOKEN_EXPIRE_MINUTES=${NEXT_PUBLIC_ACCESS_TOKEN_EXPIRE_MINUTES} \
                      --build-arg NEXT_PORT=${NEXT_PORT} \
                      -t ${IMAGE_NAME}:${IMAGE_TAG} .
                '''
            }
        }

        stage('Deploy the container') {
            steps {
                sh '''
                    # VÃ©rifier si un conteneur avec le mÃªme nom existe
                    if [ "$(docker ps -aq -f name=${CONTAINER_NAME})" ]; then
                        echo "ðŸ›‘ Un conteneur ${CONTAINER_NAME} existe dÃ©jÃ . Suppression..."
                        docker stop ${CONTAINER_NAME} || true
                        docker rm ${CONTAINER_NAME} || true
                    fi

                    echo "ðŸš€ DÃ©marrage du nouveau conteneur..."
                    docker run -d \
                        --name ${CONTAINER_NAME} \
                        -p ${NEXT_PORT}:${NEXT_PORT} \
                        --restart unless-stopped \
                        -e NEXT_PUBLIC_BASE_URL=${NEXT_PUBLIC_BASE_URL} \
                        -e NEXT_PUBLIC_APP_URL=${NEXT_PUBLIC_APP_URL} \
                        -e NEXT_PUBLIC_APP_NAME=${NEXT_PUBLIC_APP_NAME} \
                        -e NEXT_PUBLIC_APP_DESCRIPTION=${NEXT_PUBLIC_APP_DESCRIPTION} \
                        -e NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL} \
                        -e NEXT_PUBLIC_API_BASE_URL=${NEXT_PUBLIC_API_BASE_URL} \
                        -e NEXT_PUBLIC_ACCESS_TOKEN_EXPIRE_MINUTES=${NEXT_PUBLIC_ACCESS_TOKEN_EXPIRE_MINUTES} \
                        -e NEXT_PORT=${NEXT_PORT} \
                        ${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}