pipeline {
    agent any

    environment {
        CONTAINER_NAME   = 'crm-front'
        IMAGE_NAME       = 'crm-front'
        IMAGE_TAG        = "${BUILD_NUMBER}"
        PORT        = '3142'
        NEXT_PUBLIC_API_URL     = 'https://crm-api.itdcmada.com'
    }

    stages {
        stage('Build & Push') {
            steps {
                sh '''
                    echo "üõ†Ô∏è Build de l'image Docker..."
                    docker build \
                      --build-arg NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL} \
                      --build-arg PORT=${PORT} \
                      -t ${IMAGE_NAME}:${IMAGE_TAG} .
                '''
            }
        }

        stage('Deploy the container') {
            steps {
                sh '''
                    echo "üßπ Suppression du conteneur existant s'il existe..."
                    docker rm -f ${CONTAINER_NAME} || true

                    echo "üöÄ D√©marrage du nouveau conteneur..."
                    docker run -d \
                        --name ${CONTAINER_NAME} \
                        -p ${PORT}:${PORT} \
                        --restart unless-stopped \
                        -e NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL} \
                        -e PORT=${PORT} \
                        ${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}