pipeline {
    agent any

    environment {
        CONTAINER_NAME   = 'gesco-front'
        IMAGE_NAME       = 'gesco-front'
        IMAGE_TAG        = "${BUILD_NUMBER}"
        NEXT_PORT        = '3140'
        NEXT_PUBLIC_BASE_URL = 'https://gesco-api.itdcmada.mg'
    }

    stages {
        stage('Build & Push') {
            steps {
                sh '''
                    docker build \
                      --build-arg NEXT_PUBLIC_BASE_URL=${NEXT_PUBLIC_BASE_URL} \
                      --build-arg NEXT_PORT=${NEXT_PORT} \
                      -t ${IMAGE_NAME}:${IMAGE_TAG} .
                '''
            }
        }

        stage('Deploy the container') {
            steps {
                sh '''
                    # VÃ©rifier si un conteneur avec le mÃªme nom existe
                    if [ "$(docker ps -aq -f name=${CONTAINER_NAME})" ]; then
                        echo "ðŸ›‘ Un conteneur ${CONTAINER_NAME} existe dÃ©jÃ . Suppression..."
                        docker stop ${CONTAINER_NAME} || true
                        docker rm ${CONTAINER_NAME} || true
                    fi

                    echo "ðŸš€ DÃ©marrage du nouveau conteneur..."
                    docker run -d \
                        --name ${CONTAINER_NAME} \
                        -p ${NEXT_PORT}:${NEXT_PORT} \
                        --restart unless-stopped \
                        -e NEXT_PUBLIC_BASE_URL=${NEXT_PUBLIC_BASE_URL} \
                        -e NEXT_PORT=${NEXT_PORT} \
                        ${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}